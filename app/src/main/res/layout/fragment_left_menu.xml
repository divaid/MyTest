<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/drawer_bg"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="15dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/civ_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/header"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/userName"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/userEmail"
            android:textColor="@color/white" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:fillViewport="true"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_popupwindow"
                style="@style/LeftDrawerFragment_textView"
                android:text="PopupWindow" />

            <TextView
                android:id="@+id/tv_drag"
                style="@style/LeftDrawerFragment_textView"
                android:text="draglayout" />
            <TextView
                android:id="@+id/tv_download"
                style="@style/LeftDrawerFragment_textView"
                android:text="多线程断点续传下载" />

            <TextView
                android:id="@+id/tv_test"
                style="@style/LeftDrawerFragment_textView"
                android:text="Listview实现全选" />

            <TextView
                android:id="@+id/tv_test1"
                style="@style/LeftDrawerFragment_textView"
                android:text="Listview实现单选" />

            <TextView
                android:id="@+id/tv_activity_anim"
                style="@style/LeftDrawerFragment_textView"
                android:text="Fragment测试" />

            <TextView
                android:id="@+id/tv_activity_new_widget"
                style="@style/LeftDrawerFragment_textView"
                android:text="Android 6.0 新控件" />

            <TextView
                android:id="@+id/my_widget"
                style="@style/LeftDrawerFragment_textView"
                android:text="自定义控件" />

            <TextView
                android:id="@+id/tv_activity_RxJava"
                style="@style/LeftDrawerFragment_textView"
                android:text="RxJava测试" />
            <TextView
                android:id="@+id/tv_activity_record"
                style="@style/LeftDrawerFragment_textView"
                android:text="录音动画测试" />
            <TextView
                android:id="@+id/tv_activity_vertical_pager"
                style="@style/LeftDrawerFragment_textView"
                android:text="纵向viewpager" />
            <TextView
                android:id="@+id/tv_activity_animtest"
                style="@style/LeftDrawerFragment_textView"
                android:text="动画测试" />
            <TextView
                android:id="@+id/tv_activity_toast"
                style="@style/LeftDrawerFragment_textView"
                android:text="吐司测试" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/widget_horizontal_divider" />

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingLeft="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_mine_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>