<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/env_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/civ_head"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/hacker"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/tv_version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:text="版本:1.0"
        />

    <include layout="@layout/widget_horizontal_divider"/>

    <LinearLayout
        android:id="@+id/ll_version_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/color_grayish"
        android:paddingLeft="10dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/icon_mine_update"
            android:scaleType="fitCenter"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:text="版本更新"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:background="@color/color_red"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="新版本"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:src="@drawable/arrow_right"
            />
    </LinearLayout>

    <include layout="@layout/widget_horizontal_divider"/>

    <LinearLayout
        android:id="@+id/ll_function_introduction"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/color_grayish"
        android:paddingLeft="10dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/icon_mine_descript"
            android:scaleType="fitCenter"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:text="功能介绍"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:src="@drawable/arrow_right"
            />

    </LinearLayout>

    <include layout="@layout/widget_horizontal_divider"/>

    <LinearLayout
        android:id="@+id/ll_help"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/color_grayish"
        android:paddingLeft="10dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/icon_mine_help"
            android:scaleType="fitCenter"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:text="帮助"
            android:id="@+id/textView2" />



        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:src="@drawable/arrow_right"
            />

    </LinearLayout>

    <include layout="@layout/widget_horizontal_divider"/>

    <LinearLayout
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/icon_mine_info"
            android:scaleType="fitCenter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="关于"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:src="@drawable/arrow_right"
            />
    </LinearLayout>
    <include layout="@layout/widget_horizontal_divider"/>

</LinearLayout>